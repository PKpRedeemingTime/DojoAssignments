<form action="/users" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <label style="display:block;" for="email">Email: <input type="text" name="user[email]"></label>
    <label style="display:block;" for="name">Name: <input type="text" name="user[name]"></label>
    <label style="display:block;" for="password">Password: <input type="password" name="user[password]"></label>
    <label style="display:block;" for="password_confirmation">Password Confirmation: <input type="password" name="user[password_confirmation]"></label>
    <input style="display:block;" type="submit" name="Join" value="Join">
</form>