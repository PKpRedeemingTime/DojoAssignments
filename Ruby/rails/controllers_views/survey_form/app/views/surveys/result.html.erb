<% if flash[:success] %>
    <fieldset style="width:300px">
        <p><%= flash[:success] %></p>
    </fieldset>
<% end %>
<fieldset style="width:300px">
    <p><u>Submitted Information</u></p>
    <table>
        <tr>
            <td>Name:</td>
            <td><%= @result['name'] %></td>
        </tr>
        <tr>
            <td>Dojo Location::</td>
            <td><%= @result['location'] %></td>
        </tr>
        <tr>
            <td>Favorite Language:</td>
            <td><%= @result['language'] %></td>
        </tr>
        <tr>
            <td>Comment:</td>
            <td><%= @result['comment'] %></td>
        </tr>
        <tr>
            <td><%= link_to "Go Back", root_path %></td>
        </tr>
    </table>
</fieldset>