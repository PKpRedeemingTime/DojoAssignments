    <h2>Welcome!</h2>
    <fieldset style="display:inline;">
        <legend>Login</legend>
        <form action="/sessions" method = "post">
            <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
            <label style="display:block;" for="email">Email: <input type="text" name="email"></label>
            <label  style="display:block;" for="password">Password: <input type="password" name="password"></label>
            <input  style="display:block;" type="submit" name="submit" value="Login">
        </form>
    </fieldset>
